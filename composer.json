{
    "require": {
        "twig/twig": "~1.0",
        "simplehtmldom/simplehtmldom": "~v2.0-RC2",
        "samayo/bulletproof": "4.0.*",
        "phpmailer/phpmailer": "^6.6",
        "ext-gd": "*",
        "guzzlehttp/guzzle": "^7.5",
        "vlucas/phpdotenv": "^5.5",
        "stripe/stripe-php": "^10.14",
        "mailgun/mailgun-php": "^3.5",
        "async-aws/s3": "^2.0",
        "cloudinary/cloudinary_php": "^2.11",
        "league/csv": "^9.8",
        "doctrine/migrations": "^3.8"
    },
    "config": {
        "platform-check": false,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "Core\\": "Core/",
            "App\\": "App/",
            "Router\\": "Router/",
            "Module\\": "Module/",
            "Database\\": "Database/"
        }
    }
}
